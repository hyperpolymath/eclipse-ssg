{
  "$schema": "https://deno.land/x/deno@v1.40.0/cli/schemas/config-file.v1.json",
  "name": "@hyperpolymath/eclipse-ssg",
  "version": "0.2.0",
  "license": "AGPL-3.0-or-later",
  "tasks": {
    "build": "echo 'Building eclipse-ssg...' && deno check ssg/src/*.res noteg-lang/src/*.ts",
    "test": "deno test --allow-read --allow-write tests/",
    "test:e2e": "deno test --allow-all tests/e2e/",
    "test:verify": "deno test --allow-read tests/verify/",
    "test:all": "deno task test && deno task test:e2e && deno task test:verify",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno fmt --check && deno lint",
    "lsp": "deno run --allow-all noteg-lang/src/lsp/server.ts",
    "compile": "deno run --allow-read --allow-write noteg-lang/src/compiler.ts",
    "a11y:validate": "deno run --allow-read a11y/validate.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.0"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["explicit-function-return-type"],
      "exclude": ["no-explicit-any"]
    }
  },
  "test": {
    "include": ["tests/"]
  },
  "exclude": [
    "node_modules/",
    "dist/",
    "coverage/",
    ".git/"
  ]
}
